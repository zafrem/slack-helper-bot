# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
LLM_PROVIDER=openai  # openai or anthropic
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone  # pinecone, chromadb, or faiss
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=slack-rag-assistant

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_DIMENSION=1536

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-token
JIRA_PROJECT_KEY=SUPPORT
JIRA_ISSUE_TYPE=Task

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=support@example.com
SMTP_USE_TLS=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/slack_rag_assistant
# For development with SQLite:
# DATABASE_URL=sqlite+aiosqlite:///./slack_rag_assistant.db

# Application Configuration
ENVIRONMENT=development  # development, staging, or production
LOG_LEVEL=INFO
DEBUG=false

# Security Configuration
ENCRYPTION_KEY=your-32-byte-base64-encoded-key
SECRET_KEY=your-secret-key-for-signing

# Policy Configuration
DEFAULT_SLA_MINUTES=120
DEFAULT_FIRST_RESPONSE_MINUTES=15
ENABLE_PII_REDACTION=true
ENABLE_ACTION_APPROVAL=true

# Observability
METRICS_PORT=9090
ENABLE_TRACING=false
OTLP_ENDPOINT=http://localhost:4317

# Rate Limiting
RATE_LIMIT_PER_USER=10
RATE_LIMIT_WINDOW_SECONDS=60
